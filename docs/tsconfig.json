{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "preserve",
    "lib": ["DOM", "ES2021"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@silver-formily/element-plus": ["../src"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "noUnusedLocals": false,
    "declaration": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["node_modules"]
}
